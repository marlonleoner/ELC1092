{% extends "./includes/_layout.njk" %}

{% block content %}

   <div class="div_movie">
      <div class="div_movie_left">
         <p>{{movie.en_titulo}}</p>
         <img class="m_image"/>
         <div class="m_movie_infos">
            {% if movie.genero | length %}
               <a class="m_info_item" href={{"/genre/" + movie.genero.id}}>
                  <img width="16" heigth="16" src="/assets/img/ic_film.svg"/>
                  <span>{{movie.genero.value}}</span>
               </a>
            {% endif %}
            {% if movie.duracao %}
               <a class="m_info_item" href={{"/duration/" + movie.duracao}}>
                  <img width="16" heigth="16" src="/assets/img/ic_video.svg"/>
                  <span>{{movie.duracao}} min</span>
               </a>
            {% endif %}
         </div>
      </div>

      <div class="div_movie_right">
         <div>
            <strong class="m_movie_name">{{movie.titulo}}</strong>
            <div>
               <a class="m_movie_subtitle m_movie_subtitle_link" href={{"/year/" + movie.ano}}>{{movie.ano}}</a>
               {% if movie.diretor | length %}
                  <span class="m_movie_subtitle">Dirigido por</span>
                  <a class="m_movie_subtitle m_movie_subtitle_link" href={{"/director/" + movie.diretor.id}}>{{movie.diretor.value}}</a>
               {% endif %}
            </div>
            <p class="m_movie_synopsis">{{movie.sinopse}}</p>
            <div class="m_movie_cast">
               {% if movie.atores | length %}
                  <span>ELENCO</span>
                  <ul class="m_cast_list">
                     {% for ator in movie.atores %}
                        <li>
                           <a class="m_cast_item" href={{"/actor/" + ator.id}}>{{ator.value}}</a>
                        </li>
                     {% endfor %}
                  </ul><br/>
               {% endif %}
               {% if movie.elencoApoio | length %}
                  <span>ELENCO APOIO</span>
                  <ul class="m_cast_list">
                     {% for ator in movie.elencoApoio %}
                        <li>
                           <a class="m_cast_item" href="#">{{ator}}</a>
                        </li>
                     {% endfor %}
                  </ul><br/>
               {% endif %}
            </div>
         </div>
      </div>
   </div>

{% endblock %}
